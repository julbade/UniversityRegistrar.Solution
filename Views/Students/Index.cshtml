@{
  Layout = "_Layout";
}

<div class="container">
<h1>Students</h1>
<hr />
<h2>Here are the Students:</h2>
@if (@Model.Count != 0)
{
  <ol>
    @foreach (var student in @Model)
    {
      <li><a href='/students/@student.GetId()'>@student.GetName()</a> <br>  <a href="/students/@student.GetId()/update">Edit</a> | <a method="post" href="/students/@student.GetId()/delete">Delete</a> </li>
      <p>Date of Enrollment: @student.GetEnrollment()</p>
    }
  </ol>
}
<h4><a href="/students/new">Add new student</a></h4>
<h4><a href="/courses">Show Courses</a></h4>

</div>
