@{
  Layout = "_Layout";
}
<div class="container">
<h1>Courses</h1>
<hr />
<h2>Here are the Courses:</h2>
@if (@Model.Count != 0)
{
  <ol>
    @foreach (var course in @Model)
    {
      <li><a href="/courses/@course.GetId()">@course.GetName() | @course.GetNumber()</a> <br> <a href="/courses/@course.GetId()/update">Edit</a> | <a href="/courses/@course.GetId()/delete">Delete</a> </li>
    }
  </ol>
}
<h4><a href="/courses/new">Add a new course</a></h4>
<h4><a href="/students">Show Students</a></h4>

</div>
